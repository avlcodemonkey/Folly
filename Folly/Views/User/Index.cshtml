@using Folly.Resources

<content>
    <breadcrumb>
        <breadcrumb-item label="@Users.ViewAll" controller="User" action="Index" is-active="true" />
    </breadcrumb>

    <partial name="_Toast" />

    <toolbar>
        <authorized-button controller="User" action="Create" title="@Users.CreateUser" />
    </toolbar>

    <lit-table key="tableUsers" src="@Url.Action("List", "User")" row-key="id" add-url="@Url.Action("Create")" edit-url="@Url.Action("Edit", new { id = "${id}" })" delete-url="@Url.Action("Edit", new { id = "${id}" })">
        <lit-table-header property="id">@Core.Id</lit-table-header>
        <lit-table-header property="userName">@Users.UserName</lit-table-header>
        <lit-table-header property="firstName">@Users.FirstName</lit-table-header>
        <lit-table-header property="lastName">@Users.LastName</lit-table-header>
        <lit-table-header property="email">@Users.Email</lit-table-header>
    </lit-table>
</content>
