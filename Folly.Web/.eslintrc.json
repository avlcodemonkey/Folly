{
    /* See all the pre-defined configs here: https://www.npmjs.com/package/eslint-config-defaults */
    "extends": [
        "eslint:recommended",
        "airbnb"
    ],
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
    },
    "ignorePatterns": [ "Assets/js/lib" ],
    "rules": {
        "indent": [ "error", 4 ],
        "lines-between-class-members": "off",
        "space-before-function-paren": "off",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "curly": [
            "error",
            "all"
        ],
        "max-len": [ "error", 200 ],
        "no-underscore-dangle": "off"
    }
}
