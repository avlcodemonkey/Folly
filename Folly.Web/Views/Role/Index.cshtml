@using Folly.Resources

<content>
    <breadcrumb>
        <breadcrumb-item label="@Roles.ViewAll" controller="Role" action="Index" active="true" />
    </breadcrumb>

    <partial name="_Alert" />

    <alpine-table-data id="roles" src="@Url.Action("List", "Role")">
        <partial name="_AlpineTableHeader" />

        <alpine-table>
            <thead>
                <tr>
                    <th class="alpine-no-sort">
                        <a authorize-roles="role.edit" href="@Url.Action("Create", "Role")" class="button primary" title="@Roles.CreateRole">
                            <icon name="Add" />
                        </a>
                        <a authorize-roles="role.refreshpermissions" href="@Url.Action("RefreshPermissions", "Role")" class="button primary" title="@Roles.RefreshPermissions"
                            hx-confirm-ok="@Core.Okay" hx-confirm-cancel="@Core.Cancel" hx-confirm-content="@Roles.ConfirmRefreshPermissions"
                        >
                            <icon name="Refresh" />
                        </a>
                    </th>
                    <alpine-th property="id">@Core.Id</alpine-th>
                    <alpine-th property="name">@Roles.Name</alpine-th>
                </tr>
            </thead>
            <tbody>
                <alpine-table-status colspan="3" />
                <alpine-table-row>
                    <td>
                        <a authorize-roles="role.edit" class="button primary" title="@Roles.EditRole" :href="`@Url.Action("Index")/Edit/${row.id}`">
                            <icon name="EditAlt" />
                        </a>
                        <a authorize-roles="role.edit" class="button primary" title="@Core.Copy" :href="`@Url.Action("Index")/Copy/${row.id}`">
                            <icon name="Copy" />
                        </a>
                        <a authorize-roles="role.delete" class="button dark" title="@Core.Delete" :hx-delete="`@Url.Action("Index")/Delete/${row.id}`"
                            hx-confirm-ok="@Core.Okay" hx-confirm-cancel="@Core.Cancel" hx-confirm-content="@string.Format(Core.ConfirmDeleteBody, Roles.RoleLower)"
                        >
                            <icon name="DeleteAlt" />
                        </a>
                    </td>
                    <alpine-td property="id" />
                    <alpine-td property="name" />
                </alpine-table-row>
            </tbody>
        </alpine-table>

        <partial name="_AlpineTableFooter" />
    </alpine-table-data>
</content>
