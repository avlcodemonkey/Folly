@using Folly.Extensions
@using Folly.Resources
@using Folly.Utils

<content>
    <breadcrumb>
        <breadcrumb-item label="@Roles.ViewAll" controller="Role" action="Index" active="true" />
    </breadcrumb>

    <partial name="_Alerts" />

    <data-table key="roles" src="@Url.Action("List", "Role")">
        <data-head>
            <th width="@Html.Width(ColumnWidth.TripleIcon)">
                <a authorize-roles="role.edit" href="@Url.Action("Create", "Role")" class="button primary" label="@Roles.CreateRole">
                    <icon name="Add" label="@Roles.CreateRole" />
                </a>
                <x-confirm-dialog authorize-roles="role.refreshpermissions" hx-get="@Url.Action("RefreshPermissions", "Role")"
                    data-ok="@Core.Okay" data-cancel="@Core.Cancel" data-content="@Roles.ConfirmRefreshPermissions"
                >
                    <a href="#" class="button primary" label="@Roles.RefreshPermissions">
                        <icon name="Refresh" label="@Roles.RefreshPermissions" />
                    </a>
                </x-confirm-dialog>
            </th>
            <th width="@Html.Width(ColumnWidth.Id)" data-property="id">@Core.Id</th>
            <th data-property="name">@Roles.Name</th>
        </data-head>
        <data-body colspan="3">
            <td>
                <a authorize-roles="role.edit" href="@Url.ActionForMustache("Edit")" class="button primary" label="@Roles.EditRole">
                    <icon name="EditAlt" label="@Roles.EditRole" />
                </a>
                <a authorize-roles="role.edit" href="@Url.ActionForMustache("Copy")" class="button primary" label="@Core.Copy">
                    <icon name="Copy" label="@Core.Copy" />
                </a>
                <x-confirm-dialog authorize-roles="role.delete" hx-delete="@Url.ActionForMustache("Delete")"
                    data-ok="@Core.Okay" data-cancel="@Core.Cancel" data-content="@string.Format(Core.ConfirmDeleteBody, Roles.RoleLower)"
                >
                    <a href="#" class="button dark" label="@Core.Delete">
                        <icon name="DeleteAlt" label="@Core.Delete" />
                    </a>
                </x-confirm-dialog>
            </td>
            <td>{{id}}</td>
            <td>{{name}}</td>
        </data-body>
    </data-table>
</content>
