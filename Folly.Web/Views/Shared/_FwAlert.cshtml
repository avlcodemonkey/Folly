@using Folly.Resources
@using Folly.Models
@model Alert

<fw-alert>
    <div class="card bg-@Model.AlertType.ToString().ToLower() mb-2 text-white" role="alert">
        <div class="row">
            <span class="col-11">@Model.Content</span>
            <span class="col-1 text-right">
                @if(Model.CanDismiss) {
                    <button class="button icon-only button-dismiss" title="@Core.Close" aria-label="@Core.Close">
                        <icon name="Close" />
                    </button>
                }
            </span>
        </div>
    </div>
</fw-alert>
