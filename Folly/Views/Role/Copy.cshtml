@using Folly.Models
@using Folly.Resources;
@using Folly.Services
@model CopyRole
@inject IViewService ViewService

<content>
    <breadcrumb>
        <breadcrumb-item label="@Roles.ViewAll" controller="Role" action="Index"></breadcrumb-item>
        <breadcrumb-item label="@Core.Copy" controller="Role" action="Copy" route-values="@(new { Id = Model.Id })" is-active="true"></breadcrumb-item>
    </breadcrumb>

    <partial name="_Alert" />

    <horizontal-form controller="Role" action="Copy">
        <input asp-for="Id" type="hidden" />

        <form-group-input for="Prompt" autofocus="true" />

        <input class="button primary" type="submit" value="@Core.Save">
    </horizontal-form>
</content>
