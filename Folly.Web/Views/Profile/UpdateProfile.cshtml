@using Folly.Models
@using Folly.Resources
@using Folly.Services
@using Folly.Controllers
@model UpdateProfile
@inject IViewService ViewService

<content>
    <breadcrumb>
        <breadcrumb-item label="@Profile.UpdateProfile" controller="Profile" action="UpdateProfile" active="true" />
    </breadcrumb>

    <partial name="_Alert" />

    <form-content controller="Profile" action="UpdateProfile">
        <input-group for="FirstName" autofocus="true" />
        <input-group for="LastName" />
        <input-group for="Email" />
        <select-group for="LanguageId" options="@(await ViewService.GetLanguageList())" />

        <input class="button primary" type="submit" value="@Core.Save">
    </form-content>
</content>

