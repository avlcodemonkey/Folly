@using Folly.Models
@using Folly.Resources;
@using Folly.Services
@model CopyRole

<content>
    <breadcrumb>
        <breadcrumb-item label="@Roles.ViewAll" controller="Role" action="Index" />
        <breadcrumb-item label="@Core.Copy" controller="Role" action="Copy" route-values="@(new { Id = Model.Id })" active="true" />
    </breadcrumb>

    <partial name="_Alerts" />

    <form-content controller="Role" action="Copy">
        <input asp-for="Id" type="hidden" />

        <input-group for="Prompt" autofocus="true" />

        <input class="button primary" type="submit" value="@Core.Copy">
    </form-content>
</content>
