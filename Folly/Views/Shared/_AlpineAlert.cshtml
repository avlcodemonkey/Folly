@using Folly.Resources
@using Folly.Models
@model AlpineAlert

<div class="card bg-@Model.AlertType.ToString().ToLower() mb-2 text-white" role="alert" x-data="{ open: true }" x-show="open">
    <div class="row">
        <span class="col-11">@Model.Content</span>
        <span class="col-1 text-right">
            @if(Model.CanDismiss) {
                <button class="button icon-only button-dismiss" title="@Core.Close" aria-label="@Core.Close" x-on:click="open = ! open">
                    <icon name="Cancel" />
                </button>
            }
        </span>
    </div>
</div>
