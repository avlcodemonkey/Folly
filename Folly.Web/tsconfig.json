{
    "include": [ "Assets/ts/**/*.ts" ],
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6",
        "moduleResolution": "node",
        "outDir": "wwwroot/js",
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false, // @todo change later?
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}
