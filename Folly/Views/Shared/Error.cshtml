@using Folly.Controllers;
@using Folly.Resources;
@{
    Layout = null;
    ViewData[BaseController.TitleProperty] = Folly.Resources.Core.Error;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Error - Folly</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body class="error-page">
    <div class="container">
        <div class="p-2 m-2">
            <h1><i class="fl fl-emo-unhappy text-error"></i> Error</h1>
            <p>@(ViewData[BaseController.MessageProperty] ?? @Core.ErrorGeneric)</p>
        </div>
    </div>
</body>
</html>
