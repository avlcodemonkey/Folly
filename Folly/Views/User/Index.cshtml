@using Folly.Resources

<content>
    <breadcrumb>
        <breadcrumb-item label="@Users.ViewAll" controller="User" action="Index" is-active="true" />
    </breadcrumb>

    <partial name="_Alert" />

    <div class="container alpine-table" x-data="table('comments', '@Url.Action("List", "User")')" x-cloak>
        <partial name="_AlpineTableHeader" />

        <div class="row">
            <table class="col striped">
                <thead>
                    <tr>
                        <th class="alpine-no-sort">
                            <a href="@Url.Action("Create", "User")" class="button secondary button-action icon" title="@Users.CreateUser">
                                <span class="rotate45">@Html.Raw(LitIconChar.Dismiss)</span>
                            </a>
                        </th>
                        <th :class="sortClass('id')" @@click="onSortClick('id')">@Core.Id</th>
                        <th :class="sortClass('userName')" @@click="onSortClick('userName')">@Users.UserName</th>
                        <th :class="sortClass('firstName')" @@click="onSortClick('firstName')">@Users.FirstName</th>
                        <th :class="sortClass('lastName')" @@click="onSortClick('lastName')">@Users.LastName</th>
                        <th :class="sortClass('email')" @@click="onSortClick('email')">@Users.Email</th>
                    </tr>
                </thead>
                <tbody>
                    <template x-show="!rows">
                        <tr>
                            <td colspan="6"><h1 class="text-center"><div class="spinner"></div></h1></td>
                        </tr>
                    </template>
                    <template x-for="row in filteredRows" :key="row._index">
                        <tr>
                            <td>
                                <a :href="`User/Edit/${row.id}`" class="button primary button-action icon" title="@Users.EditUser">@Html.Raw(LitIconChar.Edit)</a>
                                <a :hx-delete="`User/Delete/${row.id}`" hx-confirm-ok="@Core.Okay" hx-confirm-cancel="@Core.Cancel" hx-confirm-content="@Core.AreYouSure" class="button dark button-action icon" title="@Core.Delete">@Html.Raw(LitIconChar.Dismiss)</a>
                            </td>
                            <td x-text="row.id"></td>
                            <td x-text="row.userName"></td>
                            <td x-text="row.firstName"></td>
                            <td x-text="row.lastName"></td>
                            <td x-text="row.email"></td>
                        </tr>
                    </template>
                </tbody>
            </table>
        </div>

        <partial name="_AlpineTableFooter" />
    </div>
</content>
